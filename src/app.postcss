/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	@font-face {
		font-family: 'Montserrat';
		font-style: normal;
		font-weight: 100 900;
		font-display: optional;
		src: url('/fonts/Montserrat-Variable.woff2') format('woff2');
	}

	html,
	body {
		@apply font-montserrat h-screen w-screen scroll-smooth;
	}
}
